<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Team_Black_Demons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="50dp"
        android:text="Team Black Demons"
        style="@style/Textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Team_Red_Demons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="168dp"
        android:text="Team Red Demons"
        style="@style/Textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_black_score"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="20dp"
        android:text="0"
        style="@style/Textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Team_Black_Demons" />


    <TextView
        android:id="@+id/team_red_score"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        style="@style/Textview"
        app:layout_constraintStart_toStartOf="@+id/Team_Red_Demons"
        app:layout_constraintTop_toBottomOf="@+id/Team_Red_Demons" />

    <Button
        android:id="@+id/team_black_up"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="30dp"
        android:background="@color/pink"
        android:text="+"
        style="@style/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_black_score" />

    <Button
        android:id="@+id/team_red_up"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="168dp"
        android:background="@color/pink"
        android:text="+"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_red_score" />

    <Button
        android:id="@+id/team_black_down"
        android:layout_width="94dp"
        android:layout_height="52dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="12dp"
        android:background="@color/pink"
        android:text="-"
        style="@style/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_black_up" />

    <Button
        android:id="@+id/team_red_down"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="168dp"
        android:background="@color/pink"
        android:text="-"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/team_red_up" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="385dp"
        android:layout_height="90dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_red_down"
        app:layout_constraintVertical_bias="1.0">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="324dp"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <RadioButton

                android:layout_width="61dp"
                android:layout_height="59dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="120dp"
                android:text="1"
                android:textColor="#FF018786"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2" />

            <RadioButton

                android:layout_width="53dp"
                android:layout_height="57dp"
                android:layout_marginStart="36dp"
                android:layout_marginBottom="120dp"
                android:text="2"
                android:textColor="#FF018786"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/radioButton" />

            <RadioButton
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="120dp"
                android:text="3"
                android:textColor="#FF018786"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/radioButton2" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="144dp"
        android:text="Scores gain: "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>